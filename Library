-- Library init
    getgenv().library = {
        directory = "avenir",
        project_name = "default",
        folders = {
            "/fonts",
            "/configs",
        },
        flags = {},
        config_flags = {},
        connections = {},   
        notifications = {
            notifs = {},
            enabled = false,
        },
        auto_load_config_name = nil,
        notifications_on = false,
        current_open = nil,
    }

    local themes = {
        preset = {
            accent = rgb(155, 150, 219),
            background = rgb(24, 24, 28),
            tab_bg = rgb(32, 32, 38),
            section_bg = rgb(28, 28, 32),
            border = rgb(45, 45, 52),
        }, 

        utility = {
            accent = {
                BackgroundColor3 = {},  
                TextColor3 = {}, 
                ImageColor3 = {}, 
                ScrollBarImageColor3 = {} 
            },
        }
    }

    local keys = {
